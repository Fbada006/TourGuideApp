<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_margin"
    android:background="?android:attr/selectableItemBackground"
    android:minHeight="@dimen/list_item_height"
    app:cardCornerRadius="@dimen/item_cardView_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/feature_image"
            android:layout_width="@dimen/list_item_height"
            android:layout_height="@dimen/list_item_height"
            android:contentDescription="@string/feature_helper_image_description"
            android:scaleType="centerCrop"
            tools:src="@drawable/landing_page_mombasa" />

        <RelativeLayout
            android:id="@+id/feature_description_text_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height"
            android:layout_marginLeft="@dimen/item_container_margin"
            android:layout_marginStart="@dimen/item_container_margin"
            android:layout_toEndOf="@id/feature_image"
            android:layout_toRightOf="@id/feature_image">

            <TextView
                android:id="@+id/feature_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="2"
                android:padding="@dimen/item_margin"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white"
                tools:text="The Mombasa Pentecostal Church" />


            <TextView
                android:id="@+id/feature_address_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/feature_name_text_view"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="2"
                android:padding="@dimen/item_margin"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white"
                tools:text="Along Voi-Msa Road" />

            <TextView
                android:id="@+id/feature_year_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/feature_address_text_view"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="1"
                android:padding="@dimen/item_margin"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white"
                tools:text="2016" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>